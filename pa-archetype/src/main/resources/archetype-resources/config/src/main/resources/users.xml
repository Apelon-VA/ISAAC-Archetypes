<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!-- TODO Also - dynamically update the schema location path to point to the appropriate 
  tag within github (can I be clever enough to figure this out from the maven isaac 
  version?) -->
<isaacUserCreation xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="${user.schema.location}">
  <!-- Create one or more user entries here -->
  <user>
    <uniqueFullName>Sample Full Name</uniqueFullName>
    <uniqueLogonName>sampleUser</uniqueLogonName>
    <workflowUserName>workflowUser</workflowUserName>
  </user>

  <!-- Valid values here include:
       * inferred
       * inferredThenStated
       * stated
       * statedThenInferred
   -->
  <newUserDefaults>
    <statedInferredPolicy>inferredThenStated</statedInferredPolicy>
  </newUserDefaults>
</isaacUserCreation>
	