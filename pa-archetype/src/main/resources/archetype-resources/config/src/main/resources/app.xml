
#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape =
'\' )
<!-- TODO update this so that the version number populates from maven. Also - dynamically 
  update the schema location path to point to the appropriate tag within github (can 
  I be clever enough to figure this out from the maven isaac version?) -->
<isaacAppConfig xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/Apelon-VA/ISAAC/master/isaac-app/src/main/resources/xsd/AppConfigSchema.xsd">

  <!-- Archetype properties -->
  <archetype.group.id>${archetype.group.id}</archetype.group.id>
  <archetype.artifact.id>${archetype.artifact.id}</archetype.artifact.id>
  <archetype.version>${archetype.version}</archetype.version>

  <!-- ISAAC software version -->
  <isaac.version>${isaac.version}</isaac.version>

  <!-- Repositories for code and artifacts -->
  <scm.connection>${scm.connection}</scm.connection>
  <scm.url>${scm.url}</scm.url>
  <dist.repos.id>${dist.repos.id}</dist.repos.id>
  <dist.repos.name>${dist.repos.name}</dist.repos.name>
  <dist.repos.url>${dist.repos.url}</dist.repos.url>
  <dist.repos.snapId>${dist.repos.snapId}</dist.repos.snapId>
  <dist.repos.snap.name>${dist.repos.snap.name}</dist.repos.snap.name>
  <dist.repos.snap.url>${dist.repos.snap.url}</dist.repos.snap.url>

  <!-- Database version info -->
  <db.group.id>${db.group.id}</db.group.id>
  <db.artifact.id>${db.artifact.id}</db.artifact.id>
  <db.version>${db.version}</db.version>
  <db.classifier>${db.classifier}</db.classifier>

  <!-- Users version info -->
  <users.group.id>${users.group.id}</users.group.id>
  <users.artifact.id>${users.artifact.id}</users.artifact.id>
  <users.version>${users.version}</users.version>

  <!-- Drools version info -->
  <drools.group.id>${drools.group.id}</drools.group.id>
  <drools.artifactid>${drools.artifactid}</drools.artifactid>
  <drools.version>${drools.version}</drools.version>
  <drools.url>${drools.url}</drools.url>

  <!-- Application properties -->
  <applicationTitle>${gov.va.isaac.gui.App.title}</applicationTitle>
  <previous.release.version>${previous.release.version}</previous.release.version>
  <release.version>${release.version}</release.version>
  <extension.namespace>${extension.namespace}</extension.namespace>
  <change.set.url><${change.set.url}</change.set.url>
  <default.edit.path.name>${default.edit.path.name}</default.edit.path.name>
  <default.edit.path.uuid>${default.view.path.uuid}</default.edit.path.uuid>
  <default.view.path.name>${default.edit.path.name}</default.view.path.name>
  <default.view.path.uuid>${default.view.path.uuid}</default.view.path.uuid>
  <user.schema.location>${user.schema.location}</user.schema.location>

</isaacAppConfig>
	